{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true,
    "paths": {
      "@lib/*": [
        "./src/*"
      ],
      "rxjs": [
        "./node_modules/rxjs"
      ]
    },
    "typeRoots": [
      "./node_modules/@types"
      // "./src/types"
    ]
  },
  "include": [
    "src/**/*"
    // "src/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}
